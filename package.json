{
  "name": "wxml-pretty",
  "displayName": "wxml-pretty",
  "publisher": "1251208555",
  "description": "vs code wxml格式化工具",
  "repository": "https://github.com/ma125120/wxml-pretty",
  "keywords": [
    "vs code",
    "wxml",
    "pretty"
  ],
  "version": "0.2.3",
  "files": [
    "out"
  ],
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onLanguage:wxml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "wxml-pretty",
      "properties": {
        "wxml-pretty.format": {
          "type": "boolean",
          "default": false,
          "description": "是否在保存时，自动格式化wxml文件"
        },
        "wxml-pretty.maxWidth": {
          "type": "number",
          "default": 120,
          "description": "属性最大宽度，超过后就会换行展示"
        }
      }
    },
    "commands": [
      {
        "command": "wxml-pretty.format",
        "title": "格式化wxml"
      }
    ],
    "keybindings": [
      {
        "command": "wxml-pretty.format",
        "key": "ctrl+s",
        "mac": "cmd+s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.11.7",
    "@types/vscode": "1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "wxml-parse": "^0.2.2"
  }
}
